<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/btn_disabled" android:state_enabled="false" />
    <item>
        <ripple android:color="?colorControlHighlight">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gold" />
                    <corners android:radius="32dp" />
                </shape>
            </item>
            <item android:bottom="@dimen/size_2" android:left="@dimen/size_2" android:right="@dimen/size_2" android:top="@dimen/size_2">
                <shape android:shape="rectangle">
                    <gradient android:angle="0" android:endColor="@color/gold_gradient_1" android:startColor="@color/gold_gradient_0" />
                    <corners android:radius="32dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>